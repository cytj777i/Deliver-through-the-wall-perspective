-- 传送功能变量
local Teleport = {
    Active = false,
    Target = nil,
    Connection = nil,
    PlayerList = {},
    AntiThrow = true,
    WallVision = false,
    OriginalTransparency = {},
    
    -- 环绕模式
    ParallelOrbitActive = false,
    ParallelOrbitConnection = nil,
    OrbitRadius = 10,
    OrbitSpeed = 2,
    OrbitAngle = 0,
    
