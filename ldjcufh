workspace.DescendantAdded:Connect(function(descendant)
        if descendant:IsA("Model") and espNPCs then
                wait(0.5)
                local humanoid = descendant:FindFirstChildOfClass("Humanoid")
                if humanoid and humanoid.Health > 0 then
                        if not players:GetPlayerFromCharacter(descendant) then
                                createESPBox(descendant, true)
                        end
                end
        end
end)

-- 主循环
runService.RenderStepped:Connect(function()
    -- 更新目标历史位置和速度（用于预判）
    if aimEnabled and selectedTarget then
        updateTargetHistory()
    end

    -- 检查当前目标是否仍然有效
    if selectedTarget and not isTargetValid(selectedTarget) then
        selectedTarget = nil
        targetHistory = {}
        targetVelocities = {}
        if lockAim then
            lockAim = false
            toggleLockAim.ToggleButton.Text = "关闭"
            toggleLockAim.ToggleButton.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
            print("锁定目标已失效，自动关闭锁定自瞄")
        end

        -- 如果预判功能开启但目标失效，关闭预判
        if predictEnabled then
            predictEnabled = false
            togglePredict.ToggleButton.Text = "关闭"
            togglePredict.ToggleButton.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
            print("目标失效，自动关闭预判功能")
        end
        
        -- 如果全选功能开启，自动寻找下一个目标
        if quickSelectEnabled then
            local newTarget = getNearestTarget()
            if newTarget then
                selectedTarget = newTarget
                aimEnabled = true
                print("全选功能: 目标已被击败，已自动切换到最近目标: " .. newTarget.name)
            else
                aimEnabled = false
                quickSelectEnabled = false
                QuickSelectButton.Text = "全选:关"
                QuickSelectButton.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
                print("全选功能: 未找到新目标，自动关闭")
            end
        end
    end

    -- 检查预判功能是否在自瞄未开启时被误开启
    if predictEnabled and not aimEnabled then
        predictEnabled = false
        togglePredict.ToggleButton.Text = "关闭"
        togglePredict.ToggleButton.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
        print("自瞄已关闭，自动关闭预判功能")
    end

    -- 执行瞄准
    if aimEnabled then
        if selectedTarget and lockAim then
            -- 锁定自瞄：始终瞄准选定的目标
            aimAt(selectedTarget)
        elseif selectedTarget then
            -- 有选定目标但未锁定：瞄准选定目标
            aimAt(selectedTarget)
        else
            -- 自动寻找最近的目标
            local nearest = getNearestTarget()
            if nearest then
                aimAt(nearest)
            end
        end
    end
end)